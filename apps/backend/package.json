    "express": "^5.1.0",
    "prisma": "^6.12.0",
    "sqlite3": "^5.1.7",
    "tsx": "^4.20.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.15.3",
    "@types/sqlite3": "^3.1.11",
    "typescript": "^5.8.3"
  }
